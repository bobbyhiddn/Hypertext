        "icons": {
          "COMMON": {
            "shape": "circle",
            "fill": "white",
            "outline": "navy"
          },
          "UNCOMMON": {
            "shape": "square",
            "fill": "green",
            "outline": "navy"
          },
          "RARE": {
            "shape": "hexagon",
            "fill": "gold",
            "outline": "navy"
          },
          "MYTHIC": {
            "shape": "rhombus",
            "sides": 4,
            "fill": "orange",
            "outline": "navy",
            "note": "true 4-sided diamond (rhombus), not a rotated square"
          }
        }
      },
      "stat_pips": {
        "shape": "circle",
        "max": 5,
        "filled_style": "solid navy fill with gold outline",
        "empty_style": "parchment fill with navy outline",
        "no_other_shapes": true
      }
    }
  },
