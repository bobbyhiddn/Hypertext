{
  "style_guide": {
    "game_name": "Hypertext",
    "card_type": "word_study_trading_card",
    "orientation": "vertical",
    "aspect_ratio": "2:3",
    "target_resolution": {
      "width": 1024,
      "height": 1536
    },
    "visual_style": [
      "premium trading card layout",
      "antique parchment background with subtle grain",
      "navy and gold collector frame",
      "high legibility, crisp print-like typography",
      "clean TCG UI language with a large art window"
    ],
    "palette": {
      "primary": "navy",
      "secondary": "gold",
      "background": "warm parchment",
      "ink": "near-black"
    },
    "typography": {
      "title": "classic serif display",
      "labels": "uppercase small caps",
      "body": "clean serif",
      "glyph_support": [
        "Greek renders correctly",
        "Hebrew renders correctly right-to-left"
      ]
    },
    "iconography": {
      "rarity_system": {
        "placement": "top_right_small",
        "render_rule": "Render the rarity text followed by a small diamond icon. Format: 'RARE ◆'. All rarities use diamond shape, only fill color varies. No brackets.",
        "icons": {
          "COMMON": {
            "shape": "diamond",
            "fill": "white",
            "outline": "navy"
          },
          "UNCOMMON": {
            "shape": "diamond",
            "fill": "green",
            "outline": "navy"
          },
          "RARE": {
            "shape": "diamond",
            "fill": "gold",
            "outline": "navy"
          },
          "GLORIOUS": {
            "shape": "diamond",
            "fill": "orange",
            "outline": "navy"
          }
        }
      },
      "stat_pips": {
        "shape": "circle",
        "max": 5,
        "filled_style": "solid navy fill with gold outline",
        "empty_style": "parchment fill with navy outline",
        "no_other_shapes": true
      }
    }
  },
  "layout": {
    "frame": {
      "rounded_corners": true,
      "navy_border": "thick",
      "gold_trim": "thin",
      "corner_filigree": "subtle"
